<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:yummy="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView" xmlns:input="clr-namespace:Plugin.InputKit.Shared.Controls;assembly=Plugin.InputKit"
             x:Class="FarmApp.Views.ProfilePage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Spacing="40">

            <yummy:PancakeView
                    CornerRadius="10,10,10,10"
                    HeightRequest="500"
                    BackgroundColor="White"
                    Padding="20">

                <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand">

                    <Label Text="PROFILE" TextColor="Black"  FontSize="Medium" Margin="10"/>

                    <Image Source="" HorizontalOptions="Center"/>
                    
                    <input:AdvancedEntry 
                            Text="{Binding FirstName}"
                            TextColor="Gray"
                            IsRequired="True"
                            TitleColor="Gray"
                            Annotation="Email"
                            Placeholder="First name"
                            AnnotationColor="Accent"
                            IconImage="ic_email_black_24dp.png"
                            MinLength="10"
                            MaxLength="50"
                            CornerRadius="3"
                            />

                    <input:AdvancedEntry 
                            Text="{Binding LastName}"
                            TextColor="Gray"
                            IsRequired="True"
                            TitleColor="Gray"
                            Annotation="Email"
                            Placeholder="Last name"
                            AnnotationColor="Accent"
                            IconImage="ic_email_black_24dp.png"
                            MinLength="10"
                            MaxLength="50"
                            CornerRadius="3"
                            />

                    <input:AdvancedEntry 
                            Text="{Binding Email}"
                            TextColor="Gray"
                            IsRequired="True"
                            TitleColor="Gray"
                            Annotation="Email"
                            Placeholder="Email"
                            AnnotationColor="Accent"
                            IconImage="ic_email_black_24dp.png"
                            MinLength="10"
                            MaxLength="50"
                            CornerRadius="3"
                            />

                    <input:AdvancedEntry 
                            Text="{Binding Phone}"
                            TextColor="Gray"
                            IsRequired="True"
                            TitleColor="Gray"
                            Annotation="Email"
                            Placeholder="Phone"
                            AnnotationColor="Accent"
                            IconImage="ic_email_black_24dp.png"
                            MinLength="10"
                            MaxLength="50"
                            CornerRadius="3"
                            />

                    <Button Text="UPDATE" TextColor="White" BackgroundColor="MediumPurple"
                                CornerRadius="3" />
                </StackLayout>
            </yummy:PancakeView>

            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>