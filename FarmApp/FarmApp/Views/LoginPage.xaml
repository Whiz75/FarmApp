<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FarmApp.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Vertical" Spacing="20" VerticalOptions="CenterAndExpand" Padding="20">

               
                <Label Text="Login"/>
                <Frame BackgroundColor="Gray">

                    <StackLayout Orientation="Vertical" Spacing="20">

                        <Entry  Text="{Binding Email}" Placeholder="Email address" Keyboard="Email"/>

                        <Entry x:Name="LoginPassword" Text="{Binding Password}" Placeholder="Password" Keyboard="Numeric"/>
                    </StackLayout>
                </Frame>

                <Button Text="LOGIN" TextColor="White" Command="{Binding BtnLogin}" BackgroundColor="DeepSkyBlue"/>
                <Button x:Name="BtnSignUp" Text="REGISTER" TextColor="White" Clicked="Button_Clicked" BackgroundColor="DeepSkyBlue"/>

                <Label Text="Forgot password?" HorizontalOptions="CenterAndExpand"/>

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>